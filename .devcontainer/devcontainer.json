{
  "name": "Data Science Py3.8 + Desktop",
  "image": "mcr.microsoft.com/devcontainers/python:3.8",
  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {
      "version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      },
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "portsAttributes": {
    "6080": {
      "label": "Desktop",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "pip install --upgrade pip && pip install pandas numpy matplotlib seaborn scipy scikit-learn jupyter notebook ipykernel"
}
